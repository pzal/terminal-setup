{
	"git_panel": {
		"dock": "left"
	},
	"buffer_font_features": {
		"calt": false
	},
	"tab_size": 2,
	"restore_on_startup": "last_workspace",
	"relative_line_numbers": true,
	"ensure_final_newline_on_save": false,
	"format_on_save": "off",
	"remove_trailing_whitespace_on_save": false,
	"file_scan_exclusions": [
		"**/.git",
		"**/.svn",
		"**/.hg",
		"**/.jj",
		"**/.repo",
		"**/CVS",
		"**/.DS_Store",
		"**/Thumbs.db",
		"**/.classpath",
		"**/.settings"
	],
	"file_scan_inclusions": [".env*"],
	"git": {
		"inline_blame": {
			"enabled": false
		}
	},
	"terminal": {
		"detect_venv": "off"
	},
	"auto_install_extensions": {
		"html": true
	},
	"ssh_connections": [
		{
			"host": "localhost",
			"username": "dev",
			"port": 2224,
			"projects": [
				{
					"paths": ["/workspace/robiros"]
				}
			],
			"nickname": "dev@localhost:2224"
		},
		{
			"host": "localhost",
			"username": "dev",
			"port": 2225,
			"projects": [
				{
					"paths": ["/workspace/robiros-client"]
				}
			],
			"nickname": "dev@localhost:2225"
		}
	],
	"telemetry": {
		"metrics": false
	},
	"vim_mode": true,
	"base_keymap": "VSCode",
	"ui_font_size": 16,
	"buffer_font_size": 12,
	"theme": {
		"mode": "system",
		"light": "GitHub Light Classic",
		"dark": "One Dark"
	},
	"languages": {
		"Python": {
			"language_servers": ["pyright", "ruff"],
			"formatter": [
				{
					"code_actions": {
						"source.organizeImports.ruff": true,
						"source.fixAll.ruff": true
					}
				},
				{
					"language_server": { "name": "ruff" }
				}
			]
		}
	},
	"auto_install_extensions": {
		"html": true,
		"dockerfile": true,
		"docker-compose": true,
		"ruff": true
	}
}
