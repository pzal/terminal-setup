// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "git_panel": {
        "dock": "left"
    },
    "buffer_font_features": {
        "calt": false
    },
    "restore_on_startup": "last_workspace",
    "tab_size": 2,
    "relative_line_numbers": true,
    "ensure_final_newline_on_save": false,
    "format_on_save": "off",
    "remove_trailing_whitespace_on_save": false,
    "file_scan_exclusions": [
        "**/.git",
        "**/.svn",
        "**/.hg",
        "**/.jj",
        "**/.repo",
        "**/CVS",
        "**/.DS_Store",
        "**/Thumbs.db",
        "**/.classpath",
        "**/.settings"
    ],
    "file_scan_inclusions": [".env*"],
    "git": {
        "inline_blame": {
            "enabled": false
        }
    },
    "terminal": {
        "detect_venv": "off"
    },
    "auto_install_extensions": {
        "html": true
    },
    "ssh_connections": [
        {
            "host": "localhost",
            "username": "dev",
            "port": 2224,
            "projects": [
                {
                    "paths": ["/workspace/robiros"]
                }
            ],
            "nickname": "dev@localhost:2224"
        },
        {
            "host": "localhost",
            "username": "dev",
            "port": 2225,
            "projects": [
                {
                    "paths": ["/workspace/robiros-client"]
                }
            ],
            "nickname": "dev@localhost:2225"
        }
    ],
    "telemetry": {
        "metrics": false
    },
    "vim_mode": true,
    "base_keymap": "VSCode",
    "ui_font_size": 16,
    "buffer_font_size": 12,
    "theme": {
        "mode": "system",
        "light": "GitHub Light Classic",
        "dark": "One Dark"
    }
}
